# Enforce LF line endings for all text files
* text eol=lf

# Automatically detect binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.mp4 binary
*.mov binary
*.mp3 binary

# Node.js
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf

# HTML/CSS
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# React
*.jsx text eol=lf
*.tsx text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows batch files
*.bat text eol=crlf
